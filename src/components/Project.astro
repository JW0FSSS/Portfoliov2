---
import Arrow from '../icons/arrow.astro';

interface Props {
    id: Number;
    name: string;
    description: string;
    link: string;
    image?: string;
    title?: string;
}

const { id, name, description, link, image, title } = Astro.props;
---

<div class="flex flex-col lg:flex-row my-8 w-full min-h-screen border-b-2 border-white">
    <!-- Columna izquierda -->
    <div class="flex flex-row lg:flex-col lg:justify-start justify-between  items-center pl-12 pr-2 lg:p-0 gap-4 p-4 lg:gap-y-52 lg:flex-[1]">
        <h1 class="text-3xl lg:text-5xl">0{id}</h1>
        <h2 class="text-xl lg:-rotate-90 lg:text-2xl">{name}</h2>
    </div>

    <!-- Contenido principal -->
    <div class="flex-[6] grid grid-cols-1 lg:grid-cols-3 grid-rows-[auto_auto_auto] gap-4 pl-6 lg:p-0">
        <!-- Imagen -->
        <div class="lg:col-span-3  lg:row-span-2 overflow-hidden rounded-bl-2xl rounded-tl-2xl">
            <img src={image} alt="" class="w-full h-64 sm:h-72 md:h-[400px] lg:h-full object-cover rounded-bl-2xl rounded-tl-2xl">
        </div>

        <!-- Texto y enlaces -->
        <div class="col-span-1 lg:col-span-1 pr-2 lg:p-0">
            <div class="flex flex-col gap-y-6 py-4 h-full">
                <div class="flex flex-wrap items-center gap-4">
                    <a href={link} target="_blank" class="text-3xl lg:text-5xl hover:text-secondary duration-300">{name}</a>
                    <h2><Arrow/></h2>
                </div>
                <h2 class="text-lg lg:text-2xl">{title}</h2>
                <p class="text-sm lg:text-base">{description}</p>
                <div class="mt-6 lg:mt-10">
                    <a href={link} target="_blank" class="inline-block px-8 py-2 border border-white rounded-3xl hover:text-primary hover:bg-white duration-500 text-sm lg:text-base">
                        See More
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
