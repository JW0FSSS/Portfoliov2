---
import Arrow from '../icons/arrow.astro';

    interface Props {
        id:Number;
        name: string;
        description: string;
        link: string;
        image?: string;
        title?: string;
    }

    const { id, name, description, link, image,title } = Astro.props;

---

<div class="flex my-8 w-full h-[85vh] border-b-2 border-white ">
    <div class="flex flex-col gap-y-52 flex-[1] items-center">
        <h1 class="text-5xl">0{id}</h1>
        <h2 class="-rotate-90 text-2xl">{name}</h2>
    </div>
    <div class="flex-[6] grid grid-rows-3 grid-cols-3">
        <div  class="col-span-3 row-span-2 overflow-hidden ">
            <img src={image} alt="" class="w-full h-full object-cover rounded-bl-2xl rounded-tl-2xl">
        </div>
        <div class="">
            <div class="flex flex-col gap-y-6 py-4 h-full">
                <div class="flex items-center gap-x-4">
                    <a href={link} target="_blank" class="text-5xl hover:text-secondary duration-300">{name} </a>
                    <h2><Arrow/></h2>
                </div>
                <h2>{title}</h2>
                <p >{description}</p>
                <div class="mt-10">
                    <a href={link} target="_blank" class="px-20 py-3 border border-white rounded-3xl hover:text-primary hover:bg-white duration-500">See More</a>
                </div>
            </div>
        </div>
    </div>
</div>